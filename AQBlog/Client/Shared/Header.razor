        <CardHeaderAvatar>
            <MudAvatar Image="01.jpeg" />
        </CardHeaderAvatar>
        <CardHeaderContent>
            <MudText Typo="Typo.body2">Sarfaraz Khan</MudText>
            <MudText Typo="Typo.caption">Software Consultant</MudText>
